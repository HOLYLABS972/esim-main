rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Anyone can read countries, regions, and plans
    match /countries/{countryId} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }
    
    match /regions/{regionId} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }
    
    match /plans/{planId} {
      allow read: if true;
      allow write: if false; // Only admin can write
    }
    
    // Users can read and write their own orders
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (resource.data.customerEmail == request.auth.token.email || 
         request.auth.token.email == 'admin@example.com');
    }
    
    // Config can only be read/written by admin
    match /config/{configId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email == 'admin@example.com';
    }
    
    // Blog posts - published posts can be read by anyone, all operations by authenticated users
    match /blog_posts/{postId} {
      allow read: if resource.data.status == 'published';
      allow read, write: if request.auth != null;
    }
    
    // Contact messages - only admin can read, anyone can write
    match /contact_messages/{messageId} {
      allow read: if request.auth != null && 
        request.auth.token.email == 'admin@example.com';
      allow write: if true;
    }
    
    // Newsletter subscribers - only admin can read, anyone can write
    match /newsletter_subscribers/{subscriberId} {
      allow read: if request.auth != null && 
        request.auth.token.email == 'admin@example.com';
      allow write: if true;
    }
  }
}
